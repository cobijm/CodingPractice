package leetcode;

import java.util.HashMap;
import java.util.Map;

public class StringPalindrome {
	
	public static boolean isPalindrome(String s) {
		Map<Character, Integer> charSet = new HashMap<>();
        for(int i = 0; i < s.length(); i++){
            char temp = s.charAt(i);
            if((Character.isLetter(temp)) || (Character.isDigit(temp))) {
                charSet.put(Character.toLowerCase(temp), charSet.getOrDefault(Character.toLowerCase(temp), 0) + 1);
            }
        }
        int oneCharAllowed = 0;
        for(Integer val : charSet.values()) {
        	if(val % 2 != 0) {
        		oneCharAllowed++;
        	}
        	if(oneCharAllowed > 1) {
        		return false;
        	}
        }
        return true;
    }
	
	public static boolean isPalindromeSB(String s) {
		StringBuilder str = new StringBuilder(s);
		StringBuilder strRev = new StringBuilder(s);
		strRev.reverse();
		System.out.println(str);
		if(str.equals(strRev)) {
			return true;
		}
		return false;
	}
	
	public static void main(String[] args) {
		String test = "A man, a plan, a canal: Panama";
		String test1 = "0P";
		System.out.println(isPalindromeSB(test));

	}

}
