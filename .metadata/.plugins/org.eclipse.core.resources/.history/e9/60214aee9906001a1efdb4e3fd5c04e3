package trees;

public class ValidateBinarySearchTree {
	// Definition for a binary tree node.
    public static boolean isValidBST(TreeNode root) {
    	
        return helper(root, root.val);
    }
    
    public static boolean helper(TreeNode root, int top) {
        if(root == null) {
            return true;
        }
        if(root.right != null && root.right.val <= root.val || root.right.val <= top) {
            return false;
        }
        if(root.left != null && root.left.val >= root.val || root.left.val >= top) {
            return false;
        }
        
        helper(root.left, top);
        helper(root.right, top);

        return true;
    }
	public static void main(String[] args) {
		TreeNode test = new TreeNode(10);
		test.left = new TreeNode(5);
		test.right = new TreeNode(15);
		test.right.left = new TreeNode(6);
		test.right.right = new TreeNode(20);

		System.out.println(isValidBST(test));
	}

}
